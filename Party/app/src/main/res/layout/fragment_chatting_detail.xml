<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_chatting_detail_layout"
    android:background="#00f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Space
        android:id="@+id/topZeroHeightSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:id="@+id/chatContentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topZeroHeightSpace"
        android:layout_above="@+id/chatToolsBar"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/chatContentLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/chatToolsBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/edt_input_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Send"/>
    </LinearLayout>


</RelativeLayout>